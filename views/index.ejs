<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">     
    <title><%= title %></title>
  </head>

  <body>
    <div id="container" class="container">
       <% if (locals.success) { %> 
          <div id="alt_sucess" class="alert alert-success"> 
            <%- success %> 
          </div> 
       <% } %> 

      <% if (locals.error) { %> 
        <div id="alt_warning" class="alert alert-warning"> 
          <%= error %> 
        </div> 
      <% } %> 

      <form class="form-signin" role="form" method="post" enctype='multipart/form-data'>
        <h2 class="form-signin-heading">上传文件</h2>
        <input id="iptPho" name="photo" type="file" class="form-control" />     
        <br/>
        <button id="btnSub" class="btn btn-lg btn-primary" type="submit">上 传</button>
      </form>      
    </div> 
  </body>
</html>